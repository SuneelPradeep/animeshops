.showscreen{
  /* opacity: 0; */
  display: inline-block;
  /* transform: translateY(20px); Adjust the initial position based on your design
  transition: opacity 0.8s ease, transform 0.8s ease; */
}
 .visible {
  animation: animatescreen 5s ;
  /* opacity: 1; */
  display: inline-block;
  transform: translateY(0px) scale(4);
}
@keyframes animatescreen {
  0% { 
    transform: scale(1) rotate(10deg);
  }
  10% { 
    transform: scale(1.5) rotate(5deg);
  }
   20% { 
    transform: scale(2) rotate(0);
  }
   100% { 
    transform: scale(20) translate3d(100w,-100vh,0) rotate(0);
  }
  
}
.App {
  color: #72a24d;
}





